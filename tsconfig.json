{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "declaration": true,
        "baseUrl": "./",
        "paths": {
            "src": ["src"],
            "@": ["src"]
        },
        "lib": [
            "dom",
            "es7"
        ]
    },
    "include": [
        "src/Content",
        "typings"
    ],
    "exclude": [
        "node_modules",
        "config",
        "lib"
    ]
}